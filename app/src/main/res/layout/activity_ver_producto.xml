<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".views.VerProductoActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/backgroundDark"
        android:elevation="4dp"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/productos01"
            android:fontFamily="@font/poppins"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/p_addCart"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="25dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/p_slider"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="55dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="55dp"
                    android:layout_marginBottom="25dp"
                    android:background="@color/background"
                    app:iss_auto_cycle="false"
                    app:iss_delay="3000"
                    app:iss_period="3000"
                    app:iss_selected_dot="@drawable/marcador_slider"
                    app:iss_text_align="CENTER" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/p_slider"
                    android:background="@drawable/bg_formulario"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/p_precio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:text="S/. 10.00"
                        android:textColor="@color/accent"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/p_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center|start"
                        android:fontFamily="@font/poppins"
                        android:text="Limon"
                        android:textColor="@color/text_primary"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/p_descripcion"
                        android:layout_width="match_parent"
                        android:layout_height="132dp"
                        android:layout_marginTop="15dp"
                        android:gravity="top"
                        android:lineSpacingExtra="2sp"
                        android:lines="2"
                        android:text="@string/descripcion"
                        android:textColor="@color/text_secondary"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="340dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="25dp"
                        android:background="@drawable/bg_texto"
                        android:gravity="center"
                        android:visibility="invisible"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="3dp"
                        tools:layout_editor_absoluteY="3dp">

                        <TextView
                            android:layout_width="215dp"
                            android:layout_height="18dp"
                            android:fontFamily="@font/poppins"
                            android:text="Cantidad"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/p_menos"
                            android:onClick="menosCantidad"
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_menos" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/text_disabled"
                            android:layout_marginStart="10dp" />

                        <TextView
                            android:id="@+id/p_valor"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_margin="2dp"
                            android:textColor="@color/text_primary"
                            android:text="0"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:background="@color/text_disabled" />

                        <View
                            android:id="@+id/p_mas"
                            android:onClick="masCantidad"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_mas" />
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>



        </ScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/p_addCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:visibility="invisible"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/btn_principal"
            android:fontFamily="@font/poppins"
            android:text="@string/agregar_al_carrtito"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>